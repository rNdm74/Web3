@model asp.net.mvc.charlal1.MelbourneCupOfficeSweepstakes.Models.DbView
           
@{
    ViewBag.Title = "MelbourneSweepstakes";
}

<h2>Melbourne Sweepstakes</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div style="width: 300px; float: left;">

<fieldset>
    <legend>Run Race</legend>

    @Html.ActionLink("Run Race", "RunRace", "Race", Model, "")
    
</fieldset>

<fieldset>
    <legend>Sweepstakes Status</legend>

    <div class="display-label"><a href='@Url.Content("~/Home/SweepstakeStatus")'>View Sweepstake Status</a></div>
    
</fieldset>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Player</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.SignUpPlayer.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SignUpPlayer.Name)
            @Html.ValidationMessageFor(model => model.SignUpPlayer.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SignUpPlayer.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SignUpPlayer.Email)
            @Html.ValidationMessageFor(model => model.SignUpPlayer.Email)
        </div>

        <div class="editor-label">
            @Html.Label("How many horses do you want")
        </div>
        <div class="editor-field">
            <p>1 Horse @Html.RadioButtonFor(model => model.SignUpPlayer.NoHorses, 1)</p>
            <p>2 Horses @Html.RadioButtonFor(model => model.SignUpPlayer.NoHorses, 2)</p>
            <p>3 Horses @Html.RadioButtonFor(model => model.SignUpPlayer.NoHorses, 3)</p>
            @Html.ValidationMessageFor(model => model.SignUpPlayer.NoHorses)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

</div>
<div style="float: left; width: 300px;">
<fieldset>
        <legend>Horses In Race</legend>
        <h1>@Html.Label(Model.AllHorses.Count.ToString())</h1>

        @foreach (var item in Model.AllHorses)
        {
            <p>@Html.Label(item.Name)</p>
        }
</fieldset>


</div>