@model asp.net.mvc.charlal1.MelbourneCupOfficeSweepstakes.Models.Bet
          
@{
    ViewBag.Title = "Home";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<fieldset>
    <legend>Bet</legend>

    <div class="display-label">BetAmount</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.BetAmount)
    </div>

    <div class="display-label">Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">NoHorses</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.NoHorses)
    </div>

    @foreach (var item in Model.Player.Horses)
    { 
        <p>@item.Name</p>
    }
    

</fieldset>

<fieldset>
    <legend>Sweepstakes Signup</legend>

    <div class="display-label"><a href='@Url.Content("~/Status/Index")'>View Sweepstakes</a></div>
    
</fieldset>

<fieldset>
    <legend>Sweepstakes Signup</legend>

    <div class="display-label"><a href='@Url.Content("~/Player/Create")'>Signup</a></div>
    
</fieldset>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Race Time</legend>
        
        <input type="submit" value="Simulate Race" />
    </fieldset>
}
