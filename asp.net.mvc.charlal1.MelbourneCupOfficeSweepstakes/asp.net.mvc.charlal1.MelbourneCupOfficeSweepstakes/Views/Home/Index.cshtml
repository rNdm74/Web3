@{
    ViewBag.Title = "Home";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Race Time</legend>
        <hr />
        <label id="lBettingPool">Betting Pool:</label>
        <label id="lAvailablePool">$100 (example)</label>
        <hr />
        <label id="lMyWinnings">My Winnings:</label>
        <label id="lWinnings">You have not won anything</label>
        <hr />
        <label id="lName">Enter your name:</label>
        <input id="tName" type="text" />&nbsp <a href='@Url.Content("~/Player")'>Not Registered</a>
        <hr />
        <label id="lPlaceBet">Place your bet: Your bet is $10 dollars per horse</label>
        <input id="tBet" type="text" />
        <hr />
        <label id="lNoHorses">How many horses are you betting on?</label>
        <input id="tHorses" type="text" />
        <hr />
        <label id="lYourHorses">Your horses:</label>
        <label id="lAssignedHorses">You have not placed a bet</label>
        <hr />
        <input type="submit" value="Simulate Race" />
    </fieldset>
}
