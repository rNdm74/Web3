@model asp.net.mvc.charlal1.MelbourneCupOfficeSweepstakes.Models.DbView
           
@{
    ViewBag.Title = "MelbourneSweepstakes";
}

<h2>Melbourne Sweepstakes</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div style="width: 300px; float: left;">

<fieldset>
    <legend>Run Race</legend>

    @Html.ActionLink("Run Race", "RunRace", "Race", Model, "")
    
</fieldset>

<fieldset>
    <legend>Sweepstakes Status</legend>

    <div class="display-label"><a href='@Url.Content("~/Home/SweepstakeStatus")'>View Sweepstake Status</a></div>
    
</fieldset>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Player</legend>

        <p style="color: Red;">@if (Model.PlayerExists) { @Html.Label("Player already signed up") }</p>

        <div class="editor-label">
            @Html.LabelFor(model => model.SignUpPlayer.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SignUpPlayer.Name)
            @Html.ValidationMessageFor(model => model.SignUpPlayer.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SignUpPlayer.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SignUpPlayer.Email)
            @Html.ValidationMessageFor(model => model.SignUpPlayer.Email)
        </div>

        <div class="editor-label">
            @Html.Label("How many horses do you want")
        </div>
        <div class="editor-field">
            <p>1 Horse @Html.RadioButtonFor(model => model.SignUpPlayer.NoHorses, 1)</p>
            <p>2 Horses @Html.RadioButtonFor(model => model.SignUpPlayer.NoHorses, 2)</p>
            <p>3 Horses @Html.RadioButtonFor(model => model.SignUpPlayer.NoHorses, 3)</p>
            @Html.ValidationMessageFor(model => model.SignUpPlayer.NoHorses)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

</div>
<div style="float: left; width: 300px; margin-left: 2em;">
<fieldset>
        <legend>Available Horses In Race</legend>
        <h1>@Html.Label(Model.AllHorses.Count.ToString())</h1>

        @foreach (var item in Model.AllHorses)
        {
            <p>@Html.Label(item.Name)</p>
        }
</fieldset>

<fieldset>
        <legend>Signed Up Players</legend>
        <h1>@Html.Label(Model.AllPlayers.Count.ToString())</h1>

        @foreach (var item in Model.AllPlayers)
        {
            <p>@Html.Label(item.Name)</p>
        }
</fieldset>

</div>

<div style="float: left; width: 300px; margin-left: 2em;">
<fieldset>
        <legend>Sweepstake Status</legend>
        <h1>Betting Pool: @Html.Label(Model.SweepstakeStatus.BettingPool.ToString())</h1>

        @foreach (var player in Model.SweepstakeStatus.BettingPlayers)
        {      
            if (player.Horses.Count > 0)
            {                
                <h3>Betting Player @Html.Label(player.PlayerID.ToString())</h3>
                <p>@Html.Label(player.Name) is betting on</p>
        
                foreach (var horse in player.Horses)
                {
                    <p>@Html.Label(horse.Name)</p>
                }
            }
        }
</fieldset>

</div>

<div style="float: left; width: 300px; margin-left: 2em;">
<fieldset>
        <legend>Player Winnings</legend>
        
        @foreach (var player in Model.SweepstakeStatus.BettingPlayers)
        {      
            if (player.Horses.Count > 0)
            {                
                <h3>Betting Player @Html.Label(player.PlayerID.ToString())</h3>
                <p>@Html.Label(player.Name) won $ @Html.Label(player.Winnings.ToString())</p>                
            }
        }
</fieldset>
<fieldset>
        <legend>Race Results</legend>
        <h1>Betting Pool: @Html.Label(Model.SweepstakeStatus.BettingPool.ToString())</h1>

        @foreach (var horse in Model.WinningHorses)
        {
            <p>@Html.Label(horse.Name + " Place:  " + horse.FinishingPlace)</p>
        }
</fieldset>
</div>